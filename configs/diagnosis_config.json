{
  "name": "ai-neo",
  "version": "0.9.0-mvp",
  "language": "ru",
  "diagnosis_mode": "adaptive_interview",
  "knowledge_sources": {
    "positions": "knowledge/positions.md",
    "shifts": "knowledge/shifts.md",
    "methodology": "knowledge/methodology.md",
    "question_bank": "knowledge/question_bank.md",
    "examples_transcripts": "knowledge/examples_transcripts.md"
  },

  "session": {
    "min_questions": 10,
    "max_questions": 20,
    "max_followups_per_question": 2,
    "allow_voice_answers": true,
    "allow_text_answers": true,
    "auto_save_each_turn": true,
    "user_can_skip": true,
    "skip_penalty": 0.25
  },

  "potentials": {
    "list": [
      "Янтарь",
      "Шунгит",
      "Цитрин",
      "Изумруд",
      "Рубин",
      "Гранат",
      "Сапфир",
      "Гелиодор",
      "Аметист"
    ],
    "matrix": {
      "rows": {
        "row1": "СИЛЫ",
        "row2": "ЭНЕРГИЯ",
        "row3": "СЛАБОСТИ"
      },
      "columns": {
        "col1": "ВОСПРИЯТИЕ",
        "col2": "МОТИВАЦИЯ",
        "col3": "ИНСТРУМЕНТ"
      }
    }
  },

  "interview_policy": {
    "hard_rule_questions_source": "ONLY_FROM_USER_FILES",
    "never_generate_new_questions": true,
    "adaptive_selection": {
      "goal": "approximate_90min_master_diagnostic_logic",
      "strategy": [
        "start_broad",
        "form_hypotheses_top3",
        "validate_with_contrast_questions",
        "check_shifts",
        "lock_rows",
        "lock_columns",
        "final_consistency_check"
      ]
    },
    "answer_formatting": {
      "prefer_choice": true,
      "choice_plus_comment": true,
      "comment_optional_min_chars": 0,
      "comment_if_uncertain_min_chars": 40
    }
  },

  "scoring": {
    "global": {
      "base_point": 1.0,
      "normalize_multi_choice": true,
      "multi_choice_divisor": "num_selected",
      "anti_pattern_negative_coef": 0.8,
      "contradiction_penalty": 0.9,
      "consistency_bonus": 1.05
    },

    "evidence_channels": {
      "direct_preference": 1.0,
      "process_energy": 1.1,
      "childhood_marker": 1.2,
      "behavior_spend_time_money": 1.15,
      "role_in_group": 1.05,
      "avoidance_antipattern": 1.0,
      "free_text_keywords": 0.6
    },

    "column_weights": {
      "ВОСПРИЯТИЕ": 1.0,
      "МОТИВАЦИЯ": 1.1,
      "ИНСТРУМЕНТ": 0.95
    },

    "row_inference_rules": {
      "row1_strength_threshold": 0.72,
      "row2_balance_threshold": 0.55,
      "row3_drain_threshold": 0.40,
      "row_lock_requires": {
        "min_supporting_evidences": 3,
        "must_include_one_of": [
          "childhood_marker",
          "process_energy",
          "behavior_spend_time_money"
        ]
      }
    },

    "confidence": {
      "compute": "bayes_like_weighted_sum",
      "min_to_show_final": 0.70,
      "min_to_lock_potential": 0.78,
      "min_to_lock_row": 0.75,
      "min_to_lock_column": 0.70,
      "tie_breaker": [
        "childhood_marker",
        "process_energy",
        "behavior_spend_time_money",
        "avoidance_antipattern"
      ]
    }
  },

  "column_mapping": {
    "enabled": true,
    "mapping_source": "knowledge/methodology.md",
    "rules": {
      "ВОСПРИЯТИЕ": "use_questions_mapped_to_perception",
      "МОТИВАЦИЯ": "use_questions_mapped_to_motivation",
      "ИНСТРУМЕНТ": "use_questions_mapped_to_instrument"
    }
  },

  "shift_detection": {
    "enabled": true,
    "min_shift_questions": 2,
    "max_shift_questions": 4,
    "shift_signals": {
      "compensation_money": {
        "pattern": "делаю_ради_семьи_или_надо",
        "impact": {
          "reduce_confidence_for": ["Цитрин"],
          "prefer_validate_with": ["Шунгит", "Гранат", "Янтарь"]
        }
      },
      "status_over_authenticity": {
        "pattern": "важно_казаться_а_не_быть",
        "impact": {
          "reduce_confidence_for": ["Гранат", "Рубин"],
          "prefer_validate_with": ["Сапфир", "Янтарь"]
        }
      },
      "emotional_suppression": {
        "pattern": "эмоции_внутри_но_не_показываю",
        "impact": {
          "reduce_confidence_for": ["Гранат"],
          "prefer_validate_with": ["Изумруд", "Сапфир"]
        }
      }
    },
    "application_rules": {
      "if_shift_detected": {
        "apply_penalty_to_suspect_potential": 0.92,
        "require_extra_validation_questions": 2,
        "prefer_behavioral_questions": true
      }
    }
  },

  "question_selection": {
    "source": "knowledge/question_bank.md",
    "selection_algorithm": {
      "phase1_opening": {
        "count": 4,
        "purpose": "initial_hypotheses_top3",
        "prefer": [
          "broad_strengths",
          "what_is_easy",
          "what_you_notice_first",
          "what_inspires"
        ]
      },
      "phase2_hypothesis_build": {
        "count": 6,
        "purpose": "separate_close_potentials",
        "prefer": [
          "process_vs_result",
          "role_in_group",
          "time_spend_money_spend",
          "childhood_markers"
        ]
      },
      "phase3_antipattern": {
        "count": 3,
        "purpose": "identify_row3_and_contradictions",
        "prefer": [
          "what_you_avoid",
          "what_drains",
          "what_requires_force"
        ]
      },
      "phase4_shifts": {
        "count": 2,
        "purpose": "detect_subconscious_programs",
        "prefer": [
          "money_compensation_check",
          "status_vs_authenticity_check"
        ]
      },
      "phase5_locking": {
        "count": 3,
        "purpose": "lock_rows_and_columns",
        "prefer": [
          "cross_validation",
          "childhood_recheck",
          "behavior_confirmation"
        ]
      }
    },

    "stop_conditions": [
      {
        "type": "confidence_reached",
        "rule": "top3_potentials_confidence>=0.78 AND row_lock>=0.75 AND column_lock>=0.70",
        "action": "stop_early"
      },
      {
        "type": "max_questions",
        "rule": "asked_questions>=max_questions",
        "action": "force_finalize_with_lower_confidence_warning"
      }
    ],

    "tie_handling": {
      "if_two_potentials_close": {
        "delta_threshold": 0.05,
        "action": "ask_contrast_question_from_bank",
        "max_contrast_questions": 2
      }
    }
  },

  "outputs": {
    "client_report": {
      "enabled": true,
      "format": "html_like_text",
      "include": [
        "final_matrix",
        "top3_summary",
        "energy_balance_summary",
        "next_step_upsell_hint"
      ],
      "exclude": [
        "raw_scores",
        "internal_confidence_math",
        "master_notes"
      ]
    },
    "master_report": {
      "enabled": true,
      "format": "structured_text",
      "include": [
        "final_matrix",
        "confidence_per_potential",
        "evidence_trace",
        "detected_shifts",
        "contradictions",
        "recommended_followup_questions"
      ]
    }
  },

  "final_matrix_rules": {
    "row1": { "pick": 3, "rule": "highest_strength_with_validation" },
    "row2": { "pick": 3, "rule": "stable_balance_or_restoration" },
    "row3": { "pick": 3, "rule": "consistent_drain_or_avoidance" },
    "column_assignment": {
      "col1": "dominant_perception_patterns",
      "col2": "dominant_motivation_patterns",
      "col3": "dominant_tool_patterns"
    }
  },

  "quality_guardrails": {
    "avoid_leading_questions": true,
    "avoid_psych_diagnosis_claims": true,
    "if_user_in_distress": {
      "tone": "supportive",
      "action": "offer_resources_and_pause",
      "still_can_continue_test": true
    },
    "disclaimer": {
      "enabled": true,
      "text_ru": "Диагностика NEO Потенциалов — инструмент самопознания и профилирования, не является медицинской или клинической диагностикой."
    }
  }
}