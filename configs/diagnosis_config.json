{
  "schema": "ai-neo.config.v1",

  "app": {
    "name": "NEO Диагностика потенциалов",
    "version": "mvp-7.1-hybrid",
    "language": "ru"
  },

  "questionnaire": {
    "base_questions_count": 38,
    "allow_rephrase": true,
    "anti_social_desirability": true
  },

  "scoring": {
    "top_k": 6,
    "confidence_threshold": 0.78,
    "tie_break_gap": 0.45
  },

  "columns": {
    "enabled": true,
    "definitions": [
      "восприятие",
      "мотивация",
      "инструмент",
      "результат"
    ]
  },

  "client_report": {
    "sections": [
      "ваши_сильные_стороны",
      "ваши_потенциалы",
      "как_вы_видите_мир",
      "что_вас_мотивирует",
      "как_вы_действуете",
      "что_вас_наполняет",
      "что_забирает_энергию",
      "где_внутренний_конфликт",
      "почему_вы_не_пришли_к_результату",
      "предварительный_вывод",
      "приглашение_к_мастеру"
    ],
    "tone": "спокойно_прямо_чуть_тревожно",
    "disclaimer": "Это предварительный разбор. Для точной фиксации потенциалов может понадобиться встреча с мастером."
  },

  "master_report": {
    "sections": [
      "гипотеза_top3",
      "распределение_по_колонкам",
      "сенсорные_маркеры",
      "конфликты_и_смещения",
      "риски",
      "что_уточнить",
      "рекомендации_мастеру"
    ],
    "show_scores": true,
    "show_vectors": true
  },

  "hybrid": {
    "enabled": true,
    "start_after_question_index": 38,
    "max_followup_questions": 8,
    "stop_if_confidence_over": 0.78,
    "min_gap_for_tie_break": 0.45,
    "max_same_intent_repeats": 1,

    "followup_intents_priority": [
      "columns_lock",
      "tie_break_top2",
      "anti_social_desirability",
      "shift_probe",
      "sensory_marker_check"
    ],

    "sensory_markers": {
      "Аметист": ["обоняние"],
      "Цитрин": ["кожа"],
      "Янтарь": ["жкт"],
      "Изумруд": ["глаза", "эмпатия_к_животным"],
      "Сапфир": ["слух", "чувствительность_к_шуму", "музыка"],
      "Шунгит": ["мышцы", "тело"],
      "Гранат": ["эмоции"],
      "Рубин": ["гормональные_реакции"],
      "Гелиодор": ["горло", "вкус", "еда", "пение"]
    },

    "followup_style": {
      "use_options_when_possible": true,
      "options_count": 4,
      "allow_free_text": true,
      "instruction": "Отвечайте быстро, не выбирая правильный ответ. Первое, что пришло в голову."
    },

    "intermediate_message": "Мы получили предварительную картину. Чтобы повысить точность диагностики, ответьте на несколько уточняющих вопросов."
  },

  "knowledge": {
    "enabled": true,
    "folder": "knowledge",
    "formats": ["md"],
    "top_k": 6,
    "min_score": 0.12
  },

  "debug_panel": {
    "enabled": true,
    "include": [
      "turn_log",
      "retrieval_chunks_titles",
      "raw_llm_json",
      "hypothesis_state",
      "confidence_scores"
    ]
  }
}