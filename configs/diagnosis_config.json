{
  "schema_version": "2.0.0",
  "project": "ai-neo",
  "language": "ru",
  "purpose": "NEO Диагностика потенциалов (MVP): живой разбор (адаптивное интервью). Без повторов. Сначала запрос/контекст, потом детство, потом проверка гипотез, потом смещения, потом краткий клиентский итог + лог для мастера.",
  "ui": {
    "title": "NEO Диагностика потенциалов",
    "subtitle": "Формат: живой разбор. Вопросы подбираются по логике этапов, без повторов.",
    "progress_label_template": "Ход диагностики: вопрос {n} из {max} | фаза: {stage}"
  },
  "diagnosis": {
    "mode": "adaptive_interview",
    "max_questions_total": 20,
    "min_questions_total": 10,
    "target_duration_minutes": 20,
    "stop_rules": {
      "min_evidence_per_top_potential": 3,
      "top_potentials_to_lock": 3,
      "hard_stop_at_questions": 20,
      "soft_finish_when": [
        "min_questions_reached",
        "top3_have_min_evidence",
        "no_major_conflicts"
      ]
    }
  },
  "matrix": {
    "potentials": ["Янтарь", "Шунгит", "Цитрин", "Изумруд", "Рубин", "Гранат", "Сапфир", "Гелиодор", "Аметист"],
    "rows": { "row1": "СИЛЫ", "row2": "ЭНЕРГИЯ", "row3": "СЛАБОСТИ" },
    "columns": { "col1": "ВОСПРИЯТИЕ", "col2": "МОТИВАЦИЯ", "col3": "ИНСТРУМЕНТ" }
  },
  "scoring": {
    "selection_split": true,
    "anti_pattern_penalty_coef": 0.8,
    "text_signals": {
      "enabled": true,
      "keywords_boost": 0.35,
      "certainty_words_boost": 0.15,
      "example_detail_boost": 0.25,
      "penalties": {
        "abstract_talk": 0.8,
        "contradictory_statements": 0.75
      }
    }
  },
  "mapping": {
    "keywords": {
      "Янтарь": ["порядок", "структура", "система", "организация", "разложить", "регламент", "документы", "детали", "схема", "чинить", "налаживать"],
      "Шунгит": ["движение", "тело", "спорт", "физически", "руками", "выносливость", "качалка", "прогулка", "активность"],
      "Цитрин": ["деньги", "результат", "быстро", "эффективность", "скорость", "оптимизация", "доход", "сделка", "продажа", "прибыль"],
      "Изумруд": ["красота", "гармония", "уют", "эстетика", "дизайн", "стиль", "атмосфера", "вкус", "комфорт"],
      "Рубин": ["драйв", "адреналин", "новые места", "путешествия", "эмоции", "перезагрузка", "приключение", "трансформация", "события"],
      "Гранат": ["люди", "команда", "общение", "родство", "близкие", "забота", "поддержка", "отношения", "семья"],
      "Сапфир": ["смысл", "идея", "концепция", "философия", "мировоззрение", "глубина", "почему", "как устроено"],
      "Гелиодор": ["знания", "изучение", "обучение", "объяснять", "наставник", "курс", "развитие", "учиться", "педагог"],
      "Аметист": ["цель", "стратегия", "управление", "лидерство", "план", "координация", "проект", "вектор", "решение"]
    },
    "shift_triggers_phrases": ["надо", "должен", "ради семьи", "так принято", "не могу", "некогда", "через силу"],
    "columns_mapping": {
      "ВОСПРИЯТИЕ": ["уверенно", "легко дается", "в первую очередь замечаю"],
      "МОТИВАЦИЯ": ["вдохновляет", "энергия", "кайф", "поток", "хочется"],
      "ИНСТРУМЕНТ": ["хвалят", "результат", "навык", "получается лучше"]
    }
  },
  "stages": [
    { "id": "stage0_intake", "title": "Вход", "question_ids": ["q_name", "q_request"] },
    { "id": "stage1_now", "title": "Ситуация сейчас", "question_ids": ["q_now_state", "q_energy_source", "q_when_confident", "q_what_easy"] },
    { "id": "stage2_childhood", "title": "Детство", "question_ids": ["q_childhood_play", "q_childhood_pride"] },
    { "id": "stage3_hypothesis", "title": "Проверка гипотез", "question_ids": ["q_time_flow", "q_spending", "q_group_role", "q_antipattern"] },
    { "id": "stage4_shifts", "title": "Смещения", "question_ids": ["q_shift_1", "q_shift_2"] },
    { "id": "stage5_wrap", "title": "Финал", "question_ids": ["q_wrap"] }
  ],
  "adaptive_logic": {
    "no_repeat_policy": true,
    "stage_order": ["stage0_intake", "stage1_now", "stage2_childhood", "stage3_hypothesis", "stage4_shifts", "stage5_wrap"],
    "targeting": {
      "after_stage": "stage1_now",
      "pick_followups_for_top2": true,
      "max_targeted_questions": 6
    },
    "tie_breakers": [
      "prefer_behavior_over_identity",
      "prefer_childhood_over_current_role",
      "prefer_antipattern_if_phrase_triggered"
    ],
    "when_to_ask_shifts": {
      "max_shift_questions": 2,
      "ask_if": [
        "phrase_triggered",
        "strong_result_but_low_enjoyment",
        "enjoyment_claim_but_procrastination",
        "dream_reality_gap"
      ]
    }
  },
  "confidence": {
    "thresholds": {
      "lock_potential": 0.72,
      "overall_finish": 0.75
    },
    "calculation": {
      "method": "weighted_evidence",
      "signals": ["selection_score", "text_keyword_score", "childhood_alignment", "behavior_alignment", "antipattern_support", "consistency_score", "shift_risk_penalty"],
      "shift_risk_penalty_max": 0.18
    }
  },
  "output": {
    "client_report": {
      "enabled": true,
      "tone": "supportive_clear",
      "include": ["top3_potentials", "rows_hint", "columns_hint", "short_strengths", "energy_recovery_tips", "next_step_offer"],
      "exclude": ["raw_scores", "internal_weights", "uncertainty_text"]
    },
    "master_debug": {
      "enabled": true,
      "include": ["scores_table", "evidence_by_potential", "contradictions_found", "shift_hypotheses", "answers_event_log"]
    }
  },
  "storage": {
    "answers_format": "event_log",
    "event_log_fields": ["turn", "timestamp", "stage", "question_id", "intent", "question_text", "answer_type", "answer", "selected_options", "derived_potentials", "weights_applied"]
  },
