{
  "schema_version": "2.0.0",
  "project": "ai-neo",
  "language": "ru",
  "mode": "adaptive_master_style_diagnosis",

  "session_rules": {
    "max_questions_total": 20,
    "min_questions_before_lock": 8,
    "hard_stop_at": 20,
    "no_repeat_questions": true,
    "no_repeat_families_in_row": true
  },

  "matrix": {
    "potentials": [
      "Янтарь",
      "Шунгит",
      "Цитрин",
      "Изумруд",
      "Рубин",
      "Гранат",
      "Сапфир",
      "Гелиодор",
      "Аметист"
    ],
    "rows": {
      "ROW_1": "СИЛЫ",
      "ROW_2": "ЭНЕРГИЯ",
      "ROW_3": "СЛАБОСТИ"
    },
    "columns": {
      "COL_1": "ВОСПРИЯТИЕ",
      "COL_2": "МОТИВАЦИЯ",
      "COL_3": "ИНСТРУМЕНТ"
    }
  },

  "diagnostic_slots": {
    "columns": {
      "required": 6,
      "distribution": {
        "ВОСПРИЯТИЕ": 2,
        "МОТИВАЦИЯ": 2,
        "ИНСТРУМЕНТ": 2
      }
    },
    "rows": {
      "required": 6,
      "distribution": {
        "СИЛЫ": 2,
        "ЭНЕРГИЯ": 2,
        "СЛАБОСТИ": 2
      }
    },
    "shifts": {
      "required": 2,
      "max": 2
    }
  },

  "question_flow": {
    "phases": [
      {
        "name": "orientation",
        "max_questions": 2,
        "goal": "понимание языка клиента и стартовой энергии"
      },
      {
        "name": "core_detection",
        "max_questions": 10,
        "goal": "выявление лидирующих потенциалов и столбцов"
      },
      {
        "name": "validation",
        "max_questions": 4,
        "goal": "проверка детства, поведения, повторяемости"
      },
      {
        "name": "shift_probe",
        "max_questions": 2,
        "goal": "поиск смещений и социального давления"
      },
      {
        "name": "locking",
        "max_questions": 2,
        "goal": "финальное подтверждение топ-3"
      }
    ]
  },

  "scoring": {
    "base_weights": {
      "direct_preference": 1.2,
      "behavior_example": 1.3,
      "childhood_marker": 1.4,
      "time_flow": 1.3,
      "antipattern": -1.1
    },
    "text_analysis": {
      "enabled": true,
      "keyword_boost": 0.3,
      "certainty_boost": 0.2,
      "example_depth_boost": 0.3,
      "abstract_penalty": 0.7
    }
  },

  "potential_keywords": {
    "Янтарь": ["порядок", "структура", "система", "регламент", "разложить", "детали"],
    "Шунгит": ["тело", "движение", "спорт", "руки", "физически", "выносливость"],
    "Цитрин": ["результат", "деньги", "быстро", "эффективность", "сделка"],
    "Изумруд": ["красота", "гармония", "уют", "эстетика", "атмосфера"],
    "Рубин": ["драйв", "адреналин", "перезагрузка", "путешествия", "эмоции"],
    "Гранат": ["люди", "отношения", "команда", "родные", "поддержка"],
    "Сапфир": ["смысл", "идея", "почему", "мировоззрение", "глубина"],
    "Гелиодор": ["обучение", "знания", "объяснять", "учить", "развитие"],
    "Аметист": ["стратегия", "цель", "управление", "план", "вектор"]
  },

  "shift_detection": {
    "triggers": [
      "делаю ради семьи",
      "надо",
      "должен",
      "так принято",
      "не хочу но делаю",
      "получается но не радует"
    ],
    "effect": {
      "confidence_penalty": 0.15,
      "require_validation": true
    }
  },

  "locking_rules": {
    "min_confirmations_per_potential": 3,
    "confidence_threshold": 0.72,
    "max_locked_potentials": 3,
    "prevent_lock_if_shift_active": true
  },

  "output_modes": {
    "client": {
      "show": [
        "top3_potentials",
        "rows_and_columns",
        "short_reflection",
        "energy_recovery"
      ],
      "hide": [
        "raw_scores",
        "internal_logic",
        "shift_flags"
      ]
    },
    "master": {
      "show": [
        "full_scores",
        "question_trace",
        "confidence_map",
        "shift_hypotheses",
        "recommend_next_questions"
      ]
    }
  }
}